<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wallet_highlighted_text_holo_dark"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".PhotoActivity">

    <TextView
        android:id="@+id/textbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="78dp"
        android:text="Click Pictures &amp; Record Videos"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="27sp"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textbox3"
        android:layout_marginTop="26dp"
        android:alpha="0.7"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image1"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="93dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="picture"
        android:text="Take Picture"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="137dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="video"
        android:text="Make a Video"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

</RelativeLayout>