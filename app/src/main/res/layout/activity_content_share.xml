<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:background="@color/wallet_highlighted_text_holo_dark"
                tools:context="com.example.admin.lab1_smarttree.content_share">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="82dp"
        android:alpha="0.7"
        android:layout_above="@+id/btnShareVideos"
        android:layout_alignRight="@+id/btnSharePhotos"
        android:layout_alignEnd="@+id/btnSharePhotos" />

    <Button
        android:id="@+id/btnShareEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSharePhotos"
        android:layout_alignLeft="@+id/btnShareVideos"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnShareVideos"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="10dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="shareEmail"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Share Via Email"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textColorLink="@color/common_google_signin_btn_text_light_pressed"/>

    <Button
        android:id="@+id/btnShareLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnShareVideos"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnShareVideos"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="10dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="shareLinks"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Share Audio"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
        android:id="@+id/btnSharePhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnShareVideos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="sharePhotos"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Share Photos"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
        android:id="@+id/btnShareVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnShareLinks"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/com_facebook_share_button_text_color"
        android:onClick="shareVideo"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Share Videos"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

</RelativeLayout>
